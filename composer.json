{
  "name": "sirix/monolog-redaction",
  "description": "Monolog processor for redacting sensitive information in logs",
  "keywords": [
    "monolog",
    "logging",
    "redaction",
    "redact",
    "masking",
    "privacy",
    "pii",
    "gdpr",
    "processor"
  ],
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0",
    "monolog/monolog": "^3.0",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.48",
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "Sirix\\Monolog\\Redaction\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\Sirix\\Monolog\\Redaction\\": "test/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@tools-update"
    ],
    "post-update-cmd": [
      "@tools-update"
    ],
    "check": [
      "@cs-check",
      "@rector",
      "@phpstan",
      "@test"
    ],
    "cs-check": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --dry-run -vvv --diff",
    "cs-fix": "php tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -vvv",
    "phpstan": "php tools/phpstan/vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=1G",
    "rector": "php tools/rector/vendor/bin/rector process --dry-run --xdebug --memory-limit=1G",
    "test": "phpunit --colors=always --testdox",
    "tools-update": [
      "@tools-update-csfix",
      "@tools-update-phpstan",
      "@tools-update-rector"
    ],
    "tools-update-csfix": "composer update -W --working-dir=tools/php-cs-fixer",
    "tools-update-phpstan": "composer update -W --working-dir=tools/phpstan",
    "tools-update-rector": "composer update -W --working-dir=tools/rector"
  }
}
